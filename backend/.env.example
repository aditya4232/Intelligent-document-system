# ─── Backend environment variables ────────────────────────────────────────────
# Copy this file to backend/.env for local development.
# Never commit backend/.env — it is listed in .gitignore.

# Comma-separated list of allowed frontend origins (CORS).
# Defaults to localhost:3000 and localhost:5173 when not set.
# Production example: ALLOWED_ORIGINS=https://your-username.github.io,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# Port to run uvicorn on (default: 8000)
PORT=8000
